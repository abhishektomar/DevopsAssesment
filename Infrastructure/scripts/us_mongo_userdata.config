#cloud-config
preserve_hostname: true
manage_etc_hosts: false
bootcmd:
 - sed -i '$ i if test -f /sys/kernel/mm/transparent_hugepage/khugepaged/defrag; then \n echo 0 > /sys/kernel/mm/transparent_hugepage/khugepaged/defrag \nfi \nif test -f /sys/kernel/mm/transparent_hugepage/defrag; then \n  echo never > /sys/kernel/mm/transparent_hugepage/defrag \nfi \nif test -f /sys/kernel/mm/transparent_hugepage/enabled; then \n  echo never > /sys/kernel/mm/transparent_hugepage/enabled\nfi' /etc/rc.local
 - cloud-init-per instance my_set_hostname sh -xc "echo mongo-$INSTANCE_ID > /etc/hostname; hostname -F /etc/hostname"
 - cloud-init-per instance my_etc_hosts sh -xc "sed -i -e '/^127.0.1.1/d' /etc/hosts; echo 127.0.1.1 mongo-$INSTANCE_ID.mongo.tradetracker.net.in mongo-$INSTANCE_ID >> /etc/hosts"
 - cloud-init-per instance my_etc_hosts_puppet sh -xc "echo 10.10.1.162 puppetmaster-stage.tradetracker.net.in puppet >> /etc/hosts"
apt_update: true
apt_upgrade: false
apt_sources:
 - source: "deb http://apt.puppetlabs.com $RELEASE main"
   keyid: 4BD6EC30
   filename: puppetlabs.list
packages:
 - wget
 - unzip
 - git
 - puppet
 - ruby
 - ruby-dev
 - python-pip
 - ntp
runcmd:
 - /etc/rc.local
 - mkdir /data
 - mkdir /data/mongodb
 - pip install awscli
 - gem install librarian-puppet
write_files:
 - content: |
    [main]
    logdir = /var/log/puppet
    vardir = /var/lib/puppet
    ssldir = /var/lib/puppet/ssl
    rundir = /var/run/puppet
    factpath = $vardir/lib/facter
    
    [master]
    ssl_client_header = SSL_CLIENT_S_DN
    ssl_client_verify_header = SSL_CLIENT_VERIFY
    
    [agent]
    environment = stage
    server = puppetmaster-stage.tradetracker.net.in
   path: /etc/puppet/puppet.conf
 - content: |
    cluster=mongo
   path: /etc/facter/facts.d/mongo.txt
   owner: root:root
   permissions: '0644'
ssh_authorized_keys:
 - ssh-rsa  abhishektomar
